#!/bin/bash

# Script to run the development environment with one command
# Runs backend (with hot-reload), database, rabbitmq, and the Python worker.

WORKER_SCALE=${WORKER_SCALE:-1}

docker-compose \
	-f docker-compose.yaml \
	-f docker-compose.dev.yml \
	up \
	--scale worker=${WORKER_SCALE} \
	backend \
	worker \
	database \
	rabbitmq